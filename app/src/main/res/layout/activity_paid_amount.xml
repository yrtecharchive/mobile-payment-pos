<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".PaidAmount">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_dark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount to Paid"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHP 1000"
                android:textColor="#FFFFFF"
                android:id="@+id/tvBillToPaid"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="16dp"/>
            <EditText
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_regular"
                android:hint="PHP 1000"
                android:background="@drawable/access_input"
                android:textColor="#FFFFFF"
                android:id="@+id/etBillOnHand"
                android:inputType="textPersonName"
                android:textColorHint="#747677"
                android:focusable="false"
                android:padding="15dp"
                android:textAlignment="center"/>

            <GridLayout
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:rowCount="4"
                android:id="@+id/gridLayout"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:columnCount="3">

                <Button
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="5dp"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_key"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="25dp"
                    android:id="@+id/button1"
                    android:onClick="onButtonClick"/>

                <Button
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="5dp"
                    android:text="2"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_key"
                    android:textSize="25dp"
                    android:id="@+id/button2"
                    android:onClick="onButtonClick"/>
                <Button
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="5dp"
                    android:text="3"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_key"
                    android:textSize="25dp"
                    android:id="@+id/button3"
                    android:onClick="onButtonClick"/>
                <Button
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="5dp"
                    android:text="4"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_key"
                    android:textSize="25dp"
                    android:id="@+id/button4"
                    android:onClick="onButtonClick"/>

                <Button
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="5dp"
                    android:text="5"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_key"
                    android:textSize="25dp"
                    android:id="@+id/button5"
                    android:onClick="onButtonClick"/>
                <Button
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="5dp"
                    android:text="6"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_key"
                    android:textSize="25dp"
                    android:id="@+id/button6"
                    android:onClick="onButtonClick"/>
                <Button
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="5dp"
                    android:text="7"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_key"
                    android:textSize="25dp"
                    android:id="@+id/button7"
                    android:onClick="onButtonClick"/>

                <Button
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="5dp"
                    android:text="8"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_key"
                    android:textSize="25dp"
                    android:id="@+id/button8"
                    android:onClick="onButtonClick"/>
                <Button
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="5dp"
                    android:text="9"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_key"
                    android:textSize="25dp"
                    android:id="@+id/button9"
                    android:onClick="onButtonClick"/>
                <Button
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_key"
                    android:textSize="25dp"
                    android:id="@+id/btnnull"
                    android:onClick="onButtonClick"/>

                <Button
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="5dp"
                    android:text="0"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_key"
                    android:textSize="25dp"
                    android:id="@+id/button0"
                    android:onClick="onButtonClick"/>
                <Button
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="5dp"
                    android:text="C"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_key"
                    android:textSize="25dp"
                    android:id="@+id/buttonClear"
                    android:onClick="onClearButtonClick"/>

            </GridLayout>


            <Button
                android:layout_width="130dp"
                android:layout_height="42dp"
                android:text="CONTINUE"
                android:layout_gravity="center"
                android:id="@+id/btnContinue3"
                android:background="@drawable/primary_button"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>